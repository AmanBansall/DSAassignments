/*
 * Lab 7, Question 1: Combined Sorting Techniques (Menu-Driven)
 */
#include <iostream>
#include <utility> // For std::swap

using namespace std;

// --- Utility Functions ---

/**
 * Prints the elements of an array.
 */
void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

/**
 * Resets the array to its original state.
 */
void resetArray(int arr[], int originalArr[], int n) {
    for (int i = 0; i < n; i++) {
        arr[i] = originalArr[i];
    }
}

// --- 1(a): Selection Sort ---

void selectionSort(int arr[], int n) {
    // 
    for (int i = 0; i < n - 1; i++) {
        int min_idx = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[min_idx]) {
                min_idx = j;
            }
        }
        swap(arr[min_idx], arr[i]);
    }
}

// --- 1(b): Insertion Sort ---

void insertionSort(int arr[], int n) {
    // 
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j = j - 1;
        }
        arr[j + 1] = key;
    }
}

// --- 1(c): Bubble Sort ---

void bubbleSort(int arr[], int n) {
    // 
    for (int i = 0; i < n - 1; i++) {
        bool swapped = false;
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                swap(arr[j], arr[j + 1]);
                swapped = true;
            }
        }
        if (swapped == false) {
            break;
        }
    }
}

// --- 1(d): Merge Sort ---

// Helper function for mergeSort
void merge(int arr[], int left, int mid, int right) {
    int n1 = mid - left + 1;
    int n2 = right - mid;

    int* L = new int[n1];
    int* R = new int[n2];

    for (int i = 0; i < n1; i++) L[i] = arr[left + i];
    for (int j = 0; j < n2; j++) R[j] = arr[mid + 1 + j];

    int i = 0, j = 0, k = left;
    while (i < n1 && j < n2) {
        if (L[i] <= R[j]) {
            arr[k] = L[i];
            i++;
        } else {
            arr[k] = R[j];
            j++;
        }
        k++;
    }
    while (i < n1) {
        arr[k] = L[i];
        i++;
        k++;
    }
    while (j < n2) {
        arr[k] = R[j];
        j++;
        k++;
    }
    delete[] L;
    delete[] R;
}

void mergeSort(int arr[], int left, int right) {
    // 
    if (left >= right) {
        return;
    }
    int mid = left + (right - left) / 2;
    mergeSort(arr, left, mid);
    mergeSort(arr, mid + 1, right);
    merge(arr, left, mid, right);
}

// --- 1(e): Quick Sort ---

// Helper function for quickSort
int partition(int arr[], int low, int high) {
    int pivot = arr[high];
    int i = (low - 1);
    for (int j = low; j <= high - 1; j++) {
        if (arr[j] < pivot) {
            i++;
            swap(arr[i], arr[j]);
        }
    }
    swap(arr[i + 1], arr[high]);
    return (i + 1);
}

void quickSort(int arr[], int low, int high) {
    // 
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

// --- Main Menu-Driven Function ---

int main() {
    int originalArr[] = {64, 25, 12, 22, 11, 90, 5};
    int n = sizeof(originalArr) / sizeof(originalArr[0]);
    
    // Create a working copy of the array
    int arr[n];
    
    int choice;

    do {
        // Reset the array before each sort
        resetArray(arr, originalArr, n);
        
        cout << "\n--- Sorting Techniques Menu ---" << endl;
        cout << "Original Array: ";
        printArray(arr, n);
        cout << "---------------------------------" << endl;
        cout << "1. Selection Sort" << endl;
        cout << "2. Insertion Sort" << endl;
        cout << "3. Bubble Sort" << endl;
        cout << "4. Merge Sort" << endl;
        cout << "5. Quick Sort" << endl;
        cout << "0. Exit" << endl;
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Running Selection Sort..." << endl;
                selectionSort(arr, n);
                cout << "Sorted:   ";
                printArray(arr, n);
                break;
            case 2:
                cout << "Running Insertion Sort..." << endl;
                insertionSort(arr, n);
                cout << "Sorted:   ";
                printArray(arr, n);
                break;
            case 3:
                cout << "Running Bubble Sort..." << endl;
                bubbleSort(arr, n);
                cout << "Sorted:   ";
                printArray(arr, n);
                break;
            case 4:
                cout << "Running Merge Sort..." << endl;
                mergeSort(arr, 0, n - 1);
                cout << "Sorted:   ";
                printArray(arr, n);
                break;
            case 5:
                cout << "Running Quick Sort..." << endl;
                quickSort(arr, 0, n - 1);
                cout << "Sorted:   ";
                printArray(arr, n);
                break;
            case 0:
                cout << "Exiting..." << endl;
                break;
            default:
                cout << "Invalid choice. Please try again." << endl;
        }
    } while (choice != 0);

    return 0;
}
